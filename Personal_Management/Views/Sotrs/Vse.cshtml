@model IEnumerable<Personal_Management.Models.Sotrs>

@{
    Layout = null;
}

<h3 style="text-align: center; margin-top:15px;">Все пользователи</h3>
<input class="form-control" type="text" placeholder="Поиск по пользователям" style="margin-top:15px; margin-bottom:15px" id="search-text3" onkeyup="tableSearch3()">
<div style="overflow-x:auto;">
    <table class="table " id="info-table3">
        <thead>
            <tr>
                <th style="width:100px;">
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Accounts.Login)
                </th>
                <th>
                    ФИО клиента
                </th>
                <th>
                    Дата рождения
                </th>
                <th>
                    Контактная информация
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:100px;">
                        @if (item.Photo == "-" || item.Photo == "")
                        {
                            <img src="~/Content/Photo/no.png" style="width:100%;" alt="...">
                        }
                        else
                        {
                            <img src="@item.Photo" style="width:100%;" alt="...">
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Accounts.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Full)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day_Of_Birth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Num_Phone)
                        <br />
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        <a href="~/Sotrs/AddOrEdit/@item.ID_Sotr">
                            <svg class="bi bi-pencil-square" width="2em" height="2em" style="color:orange" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.502 1.94a.5.5 0 010 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 01.707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 00-.121.196l-.805 2.414a.25.25 0 00.316.316l2.414-.805a.5.5 0 00.196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 002.5 15h11a1.5 1.5 0 001.5-1.5v-6a.5.5 0 00-1 0v6a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5v-11a.5.5 0 01.5-.5H9a.5.5 0 000-1H2.5A1.5 1.5 0 001 2.5v11z" clip-rule="evenodd" />
                            </svg>
                        </a>
                        <a data-placement="top" class="compItem" data-toggle="tooltip" title="" data-original-title="Tooltip on top" href="~/Sotrs/DeleteLogic/@item.ID_Sotr">
                            <svg class="bi bi-trash" width="2em" height="2em" viewBox="0 0 16 16" style="color:red" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function tableSearch3() {
        var phrase = document.getElementById('search-text3');
        var table = document.getElementById('info-table3');
        var regPhrase = new RegExp(phrase.value, 'i');
        var flag = false;
        for (var i = 1; i < table.rows.length; i++) {
            flag = false;
            for (var j = table.rows[i].cells.length - 1; j >= 0; j--) {
                flag = regPhrase.test(table.rows[i].cells[j].innerHTML);
                if (flag) break;
            }
            if (flag) {
                table.rows[i].style.display = "";
            } else {
                table.rows[i].style.display = "none";
            }

        }
    }
</script>

