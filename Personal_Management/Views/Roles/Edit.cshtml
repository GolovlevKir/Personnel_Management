@model Personal_Management.Models.Roles

@{
    ViewBag.Title = "Изменение прав доступа";
}

<div class="container" style="display:block">
    <h2>Изменение данных прав доступа</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Данные прав доступа</h4>
    <hr />
    <ol class="breadcrumb">
        <li class="breadcrumb-item"> @Html.ActionLink("Список прав доступа", "Index")</li>
        <li class="breadcrumb-item"> @Html.ActionLink("Аккаунты", "Index", "Accounts")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Пользователи", "Index", "Sotrs")</li>
    </ol>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Role)
    @Html.HiddenFor(model => model.Logical_Delete)

    <div class="form-group">
        @Html.LabelFor(model => model.Role_Naim, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Role_Naim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Role_Naim, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Manip_Roles, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Manip_Roles)
                @Html.ValidationMessageFor(model => model.Manip_Roles, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Manip_Sotrs, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Manip_Sotrs)
                @Html.ValidationMessageFor(model => model.Manip_Sotrs, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Manip_Department, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Manip_Department)
                @Html.ValidationMessageFor(model => model.Manip_Department, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Manip_Tests, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Manip_Tests)
                @Html.ValidationMessageFor(model => model.Manip_Tests, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить изменения" class="btn btn-outline-success" />
        </div>
    </div>
</div>
    }
</div>
