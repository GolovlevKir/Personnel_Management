@model Personal_Management.Models.ZayavkaNaSobes

@{
    ViewBag.Title = "Изменение данных ответа";
}

<h2>Изменение данных</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Данные вопроса</h4>
    <hr />
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item">@Html.ActionLink("Список заявок", "Index")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Вопросы для заявок", "Index", "Questions")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Запланированные собеседования", "Index", "Obrabotka")</li>
    </ol>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Zay)

    <div class="form-group">
        @Html.LabelFor(model => model.Sotr_ID, "ФИО соискателя", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Sotr_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sotr_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Qwe_ID, "Вопрос", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Qwe_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Qwe_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.otvet, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.otvet, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.otvet, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Изменить ответ" class="btn btn-outline-success" />
        </div>
    </div>
</div>
}
