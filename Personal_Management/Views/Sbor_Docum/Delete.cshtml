@model Personal_Management.Models.Sbor_Docum

@{
    Layout = null;
}

<div class="modal-content" style="width:100%">
    <div class="modal-header">
        <h3>Очистка данных документа</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="dl-horizontal">
            <p  class="text-muted">Вы действительно хотите очистить данные сбора документов сотрудника: @Model.Sotrs.FullName?</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Очистить" class="btn btn-outline-danger" />
                </div>
            }
        </div>
    </div>
</div>
