@model Personal_Management.Models.Work_Schedule

@{
    ViewBag.Title = "Edit";
}

<h2>Изменение данных</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Рабочий график</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Schedule)

        <div class="form-group">
            @Html.LabelFor(model => model.Naim_Sche, htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naim_Sche, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naim_Sche, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить данные" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку графиков работы", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
