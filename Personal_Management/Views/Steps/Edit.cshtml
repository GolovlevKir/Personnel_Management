@model Personal_Management.Models.Steps

@{
    ViewBag.Title = "Изменение данных этапов";
    ViewBag.NameMeta = "UpdStep";
    ViewBag.ContentMeta = "На данном окне возможно изменение данных этапов принятия сотрудника на работу";
}

<h2>Изменение</h2>
<hr />
<ol class="breadcrumb">
    <li class="breadcrumb-item"> @Html.ActionLink("Вернуться к списку этапов", "Index")</li>
    <li class="breadcrumb-item"> @Html.ActionLink("Испытательные сроки", "Index", "Isp_Sroki")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Сбор документов", "Index", "Sbor_Docum")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Список сотрудников", "Index", "Sotrs")</li>
</ol>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Этапы принятия сотрудника</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Step)
    @Html.HiddenFor(model => model.Logical_Delete)
    @Html.HiddenFor(model => model.Sotr_ID)

    <div class="form-group">
        <label class = "control-label col-md-10"><b>ФИО сотрудника</b> @Html.DisplayFor(model => model.Sotrs.Full)</label>
        
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Sobesedovanie, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Sobesedovanie)
                @Html.ValidationMessageFor(model => model.Sobesedovanie, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Dolznost, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Dolznost)
                @Html.ValidationMessageFor(model => model.Dolznost, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Grafik_Raboti, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Grafik_Raboti)
                @Html.ValidationMessageFor(model => model.Grafik_Raboti, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Sbor_Documentov, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Sbor_Documentov)
                @Html.ValidationMessageFor(model => model.Sbor_Documentov, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Isp_Srok, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.Isp_Srok)
                @Html.ValidationMessageFor(model => model.Isp_Srok, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить изменения" class="btn btn-outline-success" />
        </div>
    </div>
</div>
}
