@model Personal_Management.Models.Questions

@{
    ViewBag.Title = "Добавление вопроса";
}
    <div class="container">
        <h2>Добавление вопроса</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Новый вопрос</h4>
        <hr />
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item">@Html.ActionLink("Список вопросов", "Index")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Заявки соискателей", "Index", "ZayavkaNaSobes")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Запланированные собеседования", "Index", "Obrabotka")</li>
        </ol>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Quest_Naim, "Текст вопроса", htmlAttributes: new { @class = "control-label col-md-9" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Quest_Naim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quest_Naim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить вопрос" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
        }
    </div>