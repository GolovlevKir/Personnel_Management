<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @if (@Session["style"] == null)
    {
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    }
    else
    {
        <link href="~/Content/@Session["style"].ToString()" rel="stylesheet" />
    }

    <link href="~/Content/Photo/fav.ico" rel="icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            $.mask.definitions['~'] = '[+-]';
            $('#date').mask('99.99.9999');
            $('#date2').mask('99.99.9999');
            $('#phone').mask('+7(999)999-99-99');
        });</script>
    <link href="~/Content/StyleSite2.css" rel="stylesheet" />
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div id="logo" class="pull-left">
            <a href="#intro"><img src="~/Content/Photo/60.png" style="width: 200px; height:auto;" alt="" title="" /></a>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">

            <form class="form-inline my-2 my-lg-0">
                @try
                {
                    <ul class="navbar-nav" style="width:100%">
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                Dropdown
                            </a>
                            <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdown" style="width:100%">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>

                        @if ((int)Session["Buh"] != 0)
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-dollar-sign" style="margin-right: 5px;font-size:20px"></i>Бухгалтерия</a>
                            <div class="dropdown-menu" style="position: absolute; transform: translate3d(0px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
                                @Html.ActionLink("Имеющиеся ставки", "Index", "Rates", null, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        }
                        @if ((int)Session["admin"] != 0)
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-shield-alt" style="margin-right: 5px;font-size:20px"></i>Наcтройка прав доступа</a>
                            <div class="dropdown-menu" style="position: absolute; transform: translate3d(0px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
                                @Html.ActionLink("Права доступа", "Index", "Roles", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Аккаунты", "Index", "Accounts", null, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        }
                        <li class="nav-item">
                            @if (@Session["style"].ToString() == "bootstrap.min.css")
                            {
                            <a class="nav-link" href="@Url.Action("Them", "Account")"><i class="fas fa-bed" style="margin-right: 5px;font-size:20px"></i>Ночной режим</a>
                            }
                            else
                            {
                            <a class="nav-link" href="@Url.Action("Them", "Account")"><i class="fas fa-sun" style="margin-right: 5px;font-size:20px"></i>Обычный режим</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("LogOut", "Account")"><i class="fas fa-sign-in-alt" style="margin-right: 5px;font-size:20px"></i>Выйти</a>
                        </li>

                    </ul>
                }
                catch
                {

                }

            </form>

        </div>
    </nav>

    <div class="container body-content ">
        @RenderBody()
    </div>
    <br />
    <br />
    <br />
    <br />
    <footer id="footer" class="bg-primary">
        <div class="footer-top ">
            <div class="container">
                <div class="row">
                    <div class="col-6 col-lg-4 footer-info">
                        <h3 style="color:white">IT Liga</h3>
                        <p class="text-muted">Служба технической поддержки. Разработка и поддержка информационных систем.</p>
                        <br><br>
                    </div>
                    <div class="col-12 col-lg-4 footer-contact">
                        <h4 style="color:white">Наши контакты</h4>
                        <p class="text-muted">
                            127254 г. Москва, <br>
                            пр. Огородный, 9ас1<br>
                            <strong>Телефон:</strong><a href="tel:+74953692434"> +7 (495) 369-24-34</a><br>
                            <strong>Email:</strong><a href="mailto:info@itliga.ru"> info@itliga.ru</a><br>
                        </p>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="credits" style="color:white">
                    @DateTime.Now.Year <strong>IT Liga</strong> Все права защищены<br>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
