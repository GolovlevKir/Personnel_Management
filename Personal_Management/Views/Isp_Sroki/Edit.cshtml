@model Personal_Management.Models.Isp_Sroki

@{
    ViewBag.Title = "Изменение испытательного срока";
}

    <div class="container">
        <h2>Изменение испытательного срока</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Данные испытательного срока</h4>
                <hr />
                <ol class="breadcrumb mb-3">
                    <li class="breadcrumb-item">@Html.ActionLink("Список испытательных сроков", "Index")</li>
                    <li class="breadcrumb-item">@Html.ActionLink("Отделы организации", "Index", "Departments")</li>
                    <li class="breadcrumb-item"><a href="/Positions/Index/0">Должности</a></li>
                    <li class="breadcrumb-item">@Html.ActionLink("Штатный состав", "Index", "Posit_Responsibilities")</li>
                </ol>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_Isp)
                @Html.HiddenFor(model => model.Pos_Res_ID)


                <p class="control-label col-md-10"><b>Сотрудник:</b> @Model.Posit_Responsibilities.Sotrs.Full (@Model.Posit_Responsibilities.Positions.Naim_Posit)</p>

                <div class="form-group">
                    @Html.LabelFor(model => model.Date_Start, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Date_Start, new { htmlAttributes = new { @class = "form-control", @id = "date" } })
                        @Html.ValidationMessageFor(model => model.Date_Start, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Date_Finish, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Date_Finish, new { htmlAttributes = new { @class = "form-control", @id = "date2" } })
                        @Html.ValidationMessageFor(model => model.Date_Finish, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status_ID, "Статус", htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-12">
                        @Html.DropDownList("Status_ID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.itog, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.itog, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.itog, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Сохранить данные" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
        }
    </div>
<script src="~/Scripts/jquery.maskedinput.min.js"></script>
<script>
    jQuery(function ($) {
        $.mask.definitions['~'] = '[+-]';
        $('#date').mask('99.99.9999');
        $('#date2').mask('99.99.9999');
        $('#phone').mask('+7(999)999-99-99');
        $('#phone1').mask('+7(999)999-99-99');
    });
</script>
