@model Personal_Management.Models.Posit_Responsibilities

@{
    Layout = null;
}

<div class="modal-content" style="width:100%">
    <div class="modal-header">
        <h3>Изменение данных штатного сотрудника</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="dl-horizontal">
            
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Данные штатного сотрудника</h4>
                <hr />
                <ol class="breadcrumb mb-3">
                    <li class="breadcrumb-item">@Html.ActionLink("Штатный состав", "Index")</li>
                    <li class="breadcrumb-item">@Html.ActionLink("Отделы организации", "Index", "Departments")</li>
                    <li class="breadcrumb-item"><a href="/Positions/Index/0">Должности</a></li>
                </ol>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_Pos_Res)
                @Html.HiddenFor(model => model.Sotr_ID)

                <div class="form-group">
                    <p class = "control-label col-md-9"><b>ФИО сотрудника: </b>@Model.Sotrs.Full</p>
                   
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Positions_ID, "Должность", htmlAttributes: new { @class = "control-label col-md-9" })
                    <div class="col-md-12">
                        @Html.DropDownList("Positions_ID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Positions_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Rates_ID, "Тарифная ставка", htmlAttributes: new { @class = "control-label col-md-9" })
                    <div class="col-md-12">
                        @Html.DropDownList("Rates_ID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Rates_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Сохранить изменения" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



