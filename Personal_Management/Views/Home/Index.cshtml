@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container bootstrap snippet ">
        <div class="row ">
            <div class="mb-3" style="margin: 0 auto; width: auto;"><h2>@ViewBag.log</h2></div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <!--left col-->
                <div class="text-center">
                    <img src="~/Content/Photo/st/@ViewBag.photo" class="avatar img-circle img-thumbnail" alt="avatar">
                </div>
            </div><!--/col-3-->
            <div class="col-sm-8">
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <form class="form" action="##">
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <h4>ФИО: @ViewBag.FIO</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <h4>Должность: @ViewBag.Pos</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <h4>Номер телефона: @ViewBag.Phone</h4>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <h4>Email: <a href="mailto:@ViewBag.Em">@ViewBag.Em</a></h4>
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <h4>Описание:</h4>
                                    <p>@ViewBag.Opis</p>
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-xs-6">
                                    <h4>Старый пароль</h4>
                                    <input type="password" class="form-control" name="password" id="password" placeholder="Введите старый пароль">
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <h4>Новый пароль</h4>
                                    <input type="password" class="form-control" name="password1" id="password1" placeholder="Введите новый пароль">
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <h4>Повтор нового пароля</h4>
                                    <input type="password" class="form-control" name="password2" id="password2" placeholder="Повторите ввод пароля">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="submit" value="Сменить пароль" class="btn btn-success" />
                                </div>
                            </div>

                        </form>
                    </div>
                </div><!--/tab-pane-->
            </div><!--/tab-content-->
        </div><!--/col-9-->

    </div><!--/row-->
    <div class="wrapper">
        <div class="container">
            <h2 >Этапы приема</h2>

            <div class="container clear clear-fix">
                <div class="progressbar-wrapper clearfix">
                    <ul class="progressbar">
                        <li class="active">Level 1</li>
                        <li class="active">Level 2</li>
                        <li>Level 3</li>
                        <li>Level 4</li>
                        <li>Level 5</li>
                        <li>Level 6</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
