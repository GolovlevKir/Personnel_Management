@model Personal_Management.Models.Obrabotka

@{
    ViewBag.Title = "Изменение данных собеседования";
}

<h2>Собеседование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Данные собеседования</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Obr)
    @Html.HiddenFor(model => model.Sotr_ID)

    <div class="form-group">
        <label class="control-label col-md-10"><b>ФИО соискателя:</b>  @Html.DisplayFor(model => model.Sotrs.Full)</label>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Data_Sob, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <fieldset>
                @Html.EditorFor(model => model.Data_Sob, new { htmlAttributes = new { @class = "form-control", @id = "date" } })
                @Html.ValidationMessageFor(model => model.Data_Sob, "", new { @class = "text-danger" })
            </fieldset>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Vremya_Sob, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Vremya_Sob, new { htmlAttributes = new { @class = "form-control", @id = "time" } })
            @Html.ValidationMessageFor(model => model.Vremya_Sob, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Kommnt, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Kommnt, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kommnt, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.reshenie, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.reshenie)
                @Html.ValidationMessageFor(model => model.reshenie, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.nomerzay, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            <div class="checkbox">
                @Html.EditorFor(model => model.nomerzay, new { htmlAttributes = new { @class = "form-control", @readonly = "", @id = "readOnlyInput" } })
                @Html.ValidationMessageFor(model => model.nomerzay, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить изменения" class="btn btn-outline-success" />
        </div>
    </div>
</div>
}
