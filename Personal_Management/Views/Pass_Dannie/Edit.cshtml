@model Personal_Management.Models.Pass_Dannie

@{
    ViewBag.Title = "Изменение паспортных данных";
    ViewBag.NameMeta = "UpdPass";
    ViewBag.ContentMeta = "На данном окне возможно изменение паспортных данных";
}
<div class="container">
    <h2>Изменение данных</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Паспортные данные</h4>
    <hr />
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item">@Html.ActionLink("Список паспортных данных сотрудников", "Index")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Отделы организации", "Index", "Departments")</li>
        <li class="breadcrumb-item"><a href="/Positions/Index/0">Должности</a></li>
        <li class="breadcrumb-item">@Html.ActionLink("Штатный состав", "Index", "Posit_Responsibilities")</li>
    </ol>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID_Pass)
    @Html.HiddenFor(model => model.Sotr_ID)
    <div class="form-group">
        <label class = "control-label col-md-10"><b>ФИО сотрудника: </b>@ViewBag.fio</label>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.S_Pas, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.S_Pas, new { htmlAttributes = new { @class = "form-control", @id = "n_pass" } })
            @Html.ValidationMessageFor(model => model.S_Pas, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.N_Pas, htmlAttributes: new { @class = "control-label col-md-10" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.N_Pas, new { htmlAttributes = new { @class = "form-control", @id = "s_pass" } })
            @Html.ValidationMessageFor(model => model.N_Pas, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить данные" class="btn btn-outline-success" />
        </div>
    </div>
</div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <!-- Маски ввода -->
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script>
        jQuery(function ($) {
            $.mask.definitions['~'] = '[+-]';
            $('#n_pass').mask('9999');
            $('#s_pass').mask('999999');
        });
    </script>
}
