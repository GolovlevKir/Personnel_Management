@model Personal_Management.Models.Accounts

@{
    Layout = null;
}
<!-- Мадальное окно для разблокировки -->
<div class="modal-content" style="width:100%">
    <div class="modal-header">
        <h3>Разблокировка</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="dl-horizontal">
            <p class="text-muted">Вы действительно хотите разблокировать аккаунт с логином: @Model.Login?</p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Разблокировать" class="btn btn-outline-danger" />
                </div>
            }
        </div>
    </div>
</div>