@model IEnumerable<Personal_Management.Models.Departments>

@{
    ViewBag.Title = "Index";
}

<h2>Отделы организации</h2>
<hr />
<ol class="breadcrumb mb-3">
    <li class="breadcrumb-item"><a href="/Positions/Index/0">Просмотреть все должности</a></li>
</ol>
<hr />
<p>
    @Html.ActionLink("Создать отдел", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naim_Depart)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naim_Depart)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.ID_Depart }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID_Depart }, new { @class = "compItem" })|
                <a href="~/Positions/Index/@item.ID_Depart">Должности, входящие в отдел</a>
            </td>
        </tr>
    }

</table>
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".compItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}
