@model Personal_Management.Models.Departments

@{
    ViewBag.Title = "Добавление нового структурного подразделения";
    ViewBag.NameMeta = "AddDep";
    ViewBag.ContentMeta = "На данном окне возможно добавление новых отделов";
}
    <div class="container">
        <h2>Добавление записи</h2>
        <hr />
        <ol class="breadcrumb mb-3">
            <li class="breadcrumb-item">@Html.ActionLink("Вернуться ко всем отделам", "Index")</li>
            <li class="breadcrumb-item"><a href="/Positions/Index/0">Просмотреть все должности</a></li>
            <li class="breadcrumb-item">@Html.ActionLink("Штатный состав", "Index", "Posit_Responsibilities")</li>
        </ol>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Отделы</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Naim_Depart, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Naim_Depart, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Naim_Depart, "", new { @class = "text-danger" })
                        <p class="text-danger">@ViewBag.m</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Создать отдел" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />

        }
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}